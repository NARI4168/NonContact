<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.NonContact.dao.MemberDao">


	<!-- public void join(Map<String, Object> param); -->
	<insert id="join" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO member
		SET regDate = NOW(),
		updateDate = NOW(),
		loginId =
		#{loginId},
		loginPw = #{loginPw},
		`name` = #{name},
		nickname =
		#{nickname},
		cellphoneNum = #{cellphoneNum},
		email = #{email},
		authKey = CONCAT("authKey1__", UUID(), "__", RAND())
	</insert>


	<!-- public Member getMemberByLoginId(@Param("loginId") String loginId); -->
	<select id="getMemberByLoginId" resultType="Member">
		SELECT *
		FROM `member`
		WHERE loginId = #{loginId}
	</select>


	<!-- public void modifyMember(Map<String, Object> param); -->
	<update id="modifyMember">
		UPDATE member
		<set>
			<if
				test="loginPw != null || name != null || nickname != null || cellphoneNum != null || email != null">
				updateDate = NOW(),
			</if>
			<if test="loginPw != null">
				loginPw = #{loginPw},
			</if>
			<if test="name != null">
				`name` = #{name},
			</if>
			<if test="nickname != null">
				nickname = #{nickname},
			</if>
			<if test="cellphoneNum != null">
				cellphoneNum = #{cellphoneNum},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
		</set>
		WHERE id = #{id}
	</update>


	<!-- Member getMember(@Param("id") int id); -->
	<select id="getMember" resultType="Member">
		SELECT *
		FROM `member`
		WHERE
		id = #{id}
	</select>


<!-- Member getMemberByAuthKey(@Param("authKey") String authKey); -->
<select id="getMemberByAuthKey" resultType="Member">
		SELECT *
		FROM `member`
		WHERE
		authKey = #{authKey}
	</select>
	
	

</mapper>
